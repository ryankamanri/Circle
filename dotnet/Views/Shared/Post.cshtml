@using dotnet.Model
@model Post
@inject dotnet.Services.PostService _postService
@{
    UserInfo authorInfo = _postService.GetAuthorInfo(Model).Result;
    ICollection<Tag> tags = _postService.GetTags(Model).Result;
}
<div class="feed-item-box clearfix col-md-12">

    <a href="" target="_blank" class="feed-head-pic" style="border-radius: 0px;">
        <img src="@authorInfo.HeadImage">
    </a>

    <div class="feed-item-bd">
        <div class="feed-hd-info">
            <p> <span class="ml-2 mr-2">@authorInfo.NickName</span> <a key="@authorInfo.ID" href="javascript:void(0)"
                    class="tag-label selected"><i class="icon-nc-check"></i>
                    + 关注
                </a>
            </p>
        </div>
        <div class="nc-post-content">
            <a href="javascript:void(0);">
                <div class="feed-title">
                    <span>@Model.Title</span>
                </div>
                <div class="feed-cont">
                    <div>
                        <span style="color: rgb(37, 187, 155);">#@Model.Focus#</span>
                        <span> @Model.Summary ...</span>

                        <!---->
                    </div>
                </div>
            </a>
            <div class="post-content">
                <input id="@Model.ID" value="查看全文" jump="" class="btn btn-link font-green content-item"
                    style="cursor:pointer;width:90px;">
            </div>
        </div>
        <!---->
        <div class="feed-tags">
            @foreach (var tag in tags)
            {
            <div class="tagNode">@Html.PartialAsync("Tag",tag).Result</div>
            }
        </div>
        <!---->
        <!---->
    </div>
</div>
