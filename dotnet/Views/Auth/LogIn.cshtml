<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="/lib/jquery/dist/jquery.js"></script>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css">
    <script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
</head>
<body>
    <h1>这里放登录框</h1>
    <input type="text" id="account" class="col-md-4 form-control" placeholder="用户名">
    <input type="password" id="password" class="col-md-4 form-control" placeholder="密码">
    <input type="button" id="login" value="提交" class="btn btn-primary">
</body>
<script>
    $("#login").on("click",() => {
        let account = $("#account").val();
        let password = $("#password").val();
        $.ajax({
            url : "/LogInSubmit",
            type : "POST",
            data : {
                User : [
                    account,
                    password
                ]
            }
        }).done((data) => {
            if(data == "login succeed") window.location.href = "/Home";
            alert("send succeed\n" + data);
        }).fail(() =>
            alert("send failure")
        )
    })
</script>
</html>