

<div class="feed-item-box clearfix card">
	

	<div class="feed-item-bd">
		<a href="" target="_blank" class="feed-head-pic">
			<img style="border-radius:100px;" src="@@authorInfo.HeadImage">
		</a>
		<div class="feed-hd-info">
			<p> 
				<strong class="ml-2 mr-2">@@authorInfo.NickName</strong> 
				<a ID="@@authorInfo.ID" isfocus="@@isFocus.ToString()" href="javascript:void(0)"
					class="tag-label selected"><i class="icon-nc-check"></i>
					+ 关注
				</a>
				<span class="post-datetime d-block font-xssss text-grey-500" style="padding-left:40px" >3 hour ago</span>
			</p>
		</div>
		<div class="nc-post-content">		
				<div class="feed-title">
					<span class="text-black" >@@Model.Title</span>
				</div>
				<a class="a" href="javascript:void(0);">
					<div class="feed-cont">
					<div>
						<span class="focus" style="color: rgb(37, 187, 155);">#@@Model.Focus#</span>
						<span color=#696969 class="summary">@@Model.Summary ...</span>

						<!---->
					</div>
				</div>
				</a>
				

			<div class="post-content ">
				<div class="ckeditor"></div>
				<input type="button" postid="@@Model.ID" value="查看全文" jump="" class="btn btn-link font-green"
				       style="cursor:pointer;width:90px;">
			</div>
		</div>
		<!---->
		<div class="feed-tags">
			
		</div>

		<div class="more" >
			<div title="点赞" class="like" isLike='@@isLikeOrCollect["IsLike"]' postid="@@Model.ID">
				<div class="icon">👍</div> 
				<div class="sm-font count">@@likeCollectCommentCount["LikeCount"]</div>
			</div>
			<div title="收藏" class="collect" isCollect='@@isLikeOrCollect["IsCollect"]' postid="@@Model.ID">
				<div class="icon">📂</div>
				<div class="sm-font count">@@likeCollectCommentCount["CollectCount"]</div>
			</div>
			<div title="评论" class="comment" postid="@@Model.ID" author-name="@@authorInfo.NickName" post-title="@@Model.Title">
				<div class="icon">💬</div>
				<div class="sm-font count">@@likeCollectCommentCount["CommentCount"]</div>
			</div>
		</div>

	</div>
	
	<div class="comment-mount">

	</div>
	
</div>
