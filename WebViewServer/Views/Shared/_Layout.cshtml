@using WebViewServer.Models.User
@using WebViewServer.Services
@inject User _user
@inject Dictionary<string,string> _dict

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - @_dict["Circle"]</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="/lib/dragula/dist/dragula.css">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/css/Home/Home/main.css">
    <link rel="stylesheet" href="/css/Home/Home/ky.css">
    <link rel="stylesheet" href="/css/Shared/_Layout.css">
    <link rel="stylesheet" href="/css/Shared/Header.css">
    <link rel="stylesheet" href="/css/Shared/Tag.css">
    
    
    
</head>

<body>
    @await Html.PartialAsync("Header",_user)
    @await Html.PartialAsync("MyInterestedTags")

    <div style=" margin:auto" class="col-md-8">
        <main>
            @RenderBody()
        </main>
    </div>

</body>
<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/lib/ckeditor/ckeditor.js"></script>
<script type="module">
    import _Layout from '/js/Shared/_Layout.js'
    _Layout._Layout();
</script>


</html>
            