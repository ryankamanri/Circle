@using WebViewServer.Models.User
@using WebViewServer.Services
@model UserInfo
@inject Dictionary<string, string> _dict

<div class="middle-sidebar-bottom">
    <div class="middle-sidebar-left">
        <div class="row">
            <div class="col-lg-12">
                <div class="card w-100 border-0 p-0 bg-white shadow-xss rounded-xxl">

                    <div class="card-body h250 p-0 rounded-xxl overflow-hidden m-3"></div>

                    <div class="card-body p-0 position-relative">
                        <figure class="avatar position-absolute w100 z-index-1" style="top:-40px; left: 30px;">
                            <img src="@Model.HeadImage" alt="user" class="float-right p-1 bg-white rounded-circle w-100">
                        </figure>
                        <h4 class="fw-700 font-sm mt-2 mb-lg-5 mb-4 pl-15">
                            @Model.NickName <span class="fw-500 font-xssss text-grey-500 mt-1 mb-3 d-block">@Model.SchoolYear.Year 级 @Model.Speciality</span>
                        </h4>

                    </div>

                    <!-- 帖子、动态切换 -->
                    <div class="card-body d-block w-100 shadow-none mb-0 p-0 border-top-xs">
                        <ul class="nav nav-tabs h55 d-flex product-info-tab border-bottom-0 ps-4" id="pills-tab" role="tablist">
                            <li class="my-post active list-inline-item me-5">
                                <a class="fw-700 font-xssss text-grey-500 pt-3 pb-3 ls-1 d-inline-block active" href="#navtabs1" data-toggle="tab">我的帖子</a>
                            </li>
                            <li class="my-zone active list-inline-item me-5">
                                <a class="fw-700 font-xssss text-grey-500 pt-3 pb-3 ls-1 d-inline-block active" href="#navtabs2" data-toggle="tab">我的动态</a>
                            </li>
                            <li class="my-collect active list-inline-item me-5">
                                <a class="fw-700 font-xssss text-grey-500 pt-3 pb-3 ls-1 d-inline-block active" href="#navtabs2" data-toggle="tab">我的收藏</a>
                            </li>
                            <li class="my-like active list-inline-item me-5">
                                <a class="fw-700 font-xssss text-grey-500 pt-3 pb-3 ls-1 d-inline-block active" href="#navtabs2" data-toggle="tab">我的赞</a>
                            </li>
                            <li class="my-comment active list-inline-item me-5">
                                <a class="fw-700 font-xssss text-grey-500 pt-3 pb-3 ls-1 d-inline-block active" href="#navtabs2" data-toggle="tab">我的评论</a>
                            </li>

                        </ul>
                    </div>

                </div>
            </div>

            <div class="col-xl-8 col-xxl-9 col-lg-8">
                <div class="card w-100 shadow-xss rounded-xxl border-0 ps-4 pt-4 pe-4 pb-3 mb-3 mt-3">
                    <div class="card-body p-0">
                        <a href="/Home#Home/SendPost" class=" font-xssss fw-600 text-grey-500 card-body p-0 d-flex align-items-center"><i class="btn-round-sm font-xs text-primary feather-edit-3 me-2 bg-greylight"></i>写帖子</a>
                    </div>

                </div>

                <div class="show-mount">
                    <div class="userpost-mount col-md-10">

                    </div>
                </div>


            </div>
        </div>
    </div>

</div>