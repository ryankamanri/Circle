@using Kamanri.Extensions
@using WebViewServer.Models.User
@model UserInfo
<div class="middle-sidebar-bottom">
    <div class="middle-sidebar-left">
        <div class="middle-wrap">
            <div class="card w-100 p-0 mb-4">
                <div class=" card-body p-4 w-100 border-0 d-flex rounded-3" style="background-color: rgb(150 205 205);">
                    <a href="#Setting" class="d-inline-block mt-2">
                        <img src="/StaticFiles/Images/back.png" class="back"></img>
                    </a>
                    <h4 class="font-xs text-white fw-600 ms-4 mb-0 mt-2">账号信息</h4>
                </div>
                <div class="card-body p-lg-5 p-4 w-100 border-0 ">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 text-center">
                            <figure class="avatar ms-auto me-auto mb-0 mt-2 w100">
                                <img style="border-radius: 100px;" src="@Model.HeadImage" alt="image" class="shadow-sm rounded-3 w-100">
                            </figure>
                            <h2 class="fw-700 font-sm text-grey-900 mt-3">@Model.NickName</h2>
                            <!-- <a href="#" class="p-3 alert-primary text-primary font-xsss fw-500 mt-2 rounded-3">Upload New Photo</a> -->
                        </div>
                    </div>

                    <form class="account-info" action="/Home/AccountInfoSubmit" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-lg-6 mb-3">
                                <div class="form-group">
                                    <label class="mont-font fw-600 font-xsss">头像</label>
                                    <input name="HeadImage" value="@Model.HeadImage" type="file" accept="image/jpeg,image/png" class="form-control" alt="">
                                </div>
                            </div>
                            
                        </div>

                        <div class="row">
                            <div class="col-lg-6 mb-3">
                                <div class="form-group">
                                    <label class="mont-font fw-600 font-xsss">昵称</label>
                                    <input name="NickName" value="@Model.NickName" type="text" class="form-control">
                                </div>
                            </div>

                            <div class="col-lg-6 mb-3">
                                <div class="form-group">
                                    <label class="mont-font fw-600 font-xsss">真名</label>
                                    <input name="RealName" value="@Model.RealName" type="text" class="form-control">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 mb-3">
                                <div class="form-group">
                                    <label class="mont-font fw-600 font-xsss">学校</label>
                                    <input type="text" name="University" value="@Model.University" class="form-control">
                                </div>
                            </div>

                            <div class="col-lg-6 mb-3">
                                <div class="form-group">
                                    <label class="mont-font fw-600 font-xsss">学院</label>
                                    <input type="text" name="School" value="@Model.School" class="form-control">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 mb-3">
                                <div class="form-group">
                                    <label class="mont-font fw-600 font-xsss">专业</label>
                                    <input type="text" name="Speciality" value="@Model.Speciality" class="form-control">
                                </div>
                            </div>

                            <div class="col-lg-6 mb-3">
                                <div class="form-group">
                                    <label class="mont-font fw-600 font-xsss">年级</label>
                                    <input type="month" name="SchoolYear" value="@Model.SchoolYear.ToString("yyyy-MM")" class="form-control">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            @* <div class="col-lg-6 mb-3">
                            <div class="form-group">
                                <label class="mont-font fw-600 font-xsss">专业</label>
                                <input type="text" class="form-control">
                            </div>        
                        </div>                                    *@

                            <div class="col-lg-12 mb-3">
                                <label class="mont-font fw-600 font-xsss">简介</label>
                                <textarea name="Introduction" class="form-control mb-0 p-3 h100 bg-greylight lh-16" rows="5" placeholder="介绍一下你自己吧..." spellcheck="false">@Model.Introduction</textarea>
                            </div>

                            <div class="col-lg-12">
                                <input type="button" value="提交" class="submit text-center text-white font-xsss fw-600 p-3 w175 rounded-4 d-inline-block" style="background-color: rgb(150 205 205);" />
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

</div>