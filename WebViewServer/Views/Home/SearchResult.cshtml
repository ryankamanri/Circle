@model string
@using WebViewServer.Services
@inject SearchService _search
@{
	ViewData["Title"] = "搜索结果";
	ViewData["searchString"] = Model;
	//IList<Tag> tagList = new Tag().GetList(_sql.Query($"select * from tags where tag like '%{Model}%'"));
	var userInfo_tagLists = await _search.SearchUserInfoAndTags(Model);
	var posts = await _search.SearchPosts(Model);
}

<div id="search-result" class="col-md-12 pb-5">
	
		<div class="users pt-4 pb-4 pl-4 pr-4">
			<div class="user-container">
			@foreach (var userInfo_tagList in userInfo_tagLists)
			{
				@await Html.PartialAsync("SearchUserInfo",userInfo_tagList)
			}
			</div>

		</div>

	
	@foreach (var post in posts)
	{
		@await Html.PartialAsync("Post",post)
	}


</div>
